<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:elevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dog_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_10k_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/dog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vertical_guideline"
            app:layout_constraintTop_toTopOf="@id/breed_label"
            tools:text="Chihuahua"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/dog_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Small"
            app:layout_constraintTop_toTopOf="@id/size_label"
            app:layout_constraintStart_toEndOf="@id/vertical_guideline"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/dog_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pastoral/Herding dog"
            app:layout_constraintTop_toTopOf="@id/group_label"
            app:layout_constraintStart_toEndOf="@id/vertical_guideline"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/dog_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mexico/France"
            app:layout_constraintTop_toTopOf="@id/origin_label"
            app:layout_constraintStart_toEndOf="@id/vertical_guideline"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/breed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breed: "
            app:layout_constraintEnd_toEndOf="@id/vertical_guideline"
            app:layout_constraintTop_toBottomOf="@id/dog_image"
            android:layout_marginTop="4dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/size_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size: "
            app:layout_constraintTop_toBottomOf="@id/dog_name"
            app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
            android:layout_marginTop="4dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/group_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group: "
            app:layout_constraintTop_toBottomOf="@id/dog_size"
            app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
            android:layout_marginTop="4dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/origin_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Origin: "
            app:layout_constraintTop_toBottomOf="@id/dog_group"
            app:layout_constraintEnd_toStartOf="@id/vertical_guideline"
            android:layout_marginTop="4dp"
            android:textSize="16dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>