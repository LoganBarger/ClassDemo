<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.DogDetailFragment">

    <ImageView
        android:id="@+id/dog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_10k_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/horizontal_guideline"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/dog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/breed_label"
        app:layout_constraintTop_toTopOf="@id/breed_label"
        tools:text="Chihuahua"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dog_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Small"
        app:layout_constraintTop_toTopOf="@id/size_label"
        app:layout_constraintStart_toEndOf="@id/size_label"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dog_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastoral/Herding dog"
        app:layout_constraintTop_toTopOf="@id/group_label"
        app:layout_constraintStart_toEndOf="@id/group_label"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dog_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mexico/France"
        app:layout_constraintTop_toTopOf="@id/origin_label"
        app:layout_constraintStart_toEndOf="@id/origin_label"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dog_purity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purebred"
        app:layout_constraintTop_toTopOf="@id/purity_label"
        app:layout_constraintStart_toEndOf="@id/purity_label"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/dog_lifespan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14-18 years"
        app:layout_constraintTop_toTopOf="@id/lifespan_label"
        app:layout_constraintStart_toEndOf="@id/lifespan_label"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/breed_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizontal_guideline"
        android:layout_marginTop="70dp"
        android:layout_marginStart="80dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/size_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: "
        app:layout_constraintTop_toBottomOf="@id/dog_name"
        app:layout_constraintStart_toStartOf="@id/breed_label"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Group: "
        app:layout_constraintTop_toBottomOf="@id/dog_size"
        app:layout_constraintStart_toStartOf="@id/size_label"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/origin_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin: "
        app:layout_constraintTop_toBottomOf="@id/dog_group"
        app:layout_constraintStart_toStartOf="@id/group_label"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/purity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purity: "
        app:layout_constraintTop_toBottomOf="@id/dog_origin"
        app:layout_constraintStart_toStartOf="@id/origin_label"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/lifespan_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lifespan: "
        app:layout_constraintTop_toBottomOf="@id/dog_purity"
        app:layout_constraintStart_toStartOf="@id/purity_label"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5"/>

</androidx.constraintlayout.widget.ConstraintLayout>